<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd" version="3.2">
    <persistence-unit name="Rollplayer">
        <description>
            Persistence unit for the entirety of Rollplayer.
        </description>

        <class>dev.infernity.rollplayer.database.objects.UserSettings</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost/rollplayer" />
            <property name="jakarta.persistence.jdbc.user" value="rollplayer" />
            <property name="jakarta.persistence.jdbc.password" value="PASSWORD" />

            <!-- Automatically export the schema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>

